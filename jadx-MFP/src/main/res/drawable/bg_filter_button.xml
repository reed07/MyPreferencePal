<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#1e000000"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="@color/blue"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <stroke android:width="1dp" android:color="#1e000000"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_checked="true">
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="@color/blue"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <stroke android:width="1dp" android:color="#1e000000"/>
                    <solid android:color="@color/black_overlay_20_percent"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
