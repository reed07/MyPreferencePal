<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true">
    <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/add_friends_pitch"/>
        <Button android:id="@+id/btn_add_from_facebook" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="@string/addfriends_facebook" style="@style/facebook_button"/>
        <Button android:id="@+id/btn_add_from_contacts" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/addfriends_contacts" style="@style/btn_dark_grey"/>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/btn_maybe_later" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/addfriends_later" style="@style/hyperlink_text"/>
    </LinearLayout>
</ScrollView>
