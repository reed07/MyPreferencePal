<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/container" android:padding="@dimen/match_ingredient_item_spacing" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/match_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="32dp" android:src="@drawable/ic_check_green"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:ellipsize="end" android:id="@+id/title" android:layout_marginBottom="@dimen/match_ingredient_item_text_spacing" android:text="Ingredient Name" android:maxLines="1" style="@style/Subheader.BlackText"/>
            <TextView android:ellipsize="end" android:id="@+id/info" android:layout_marginBottom="@dimen/match_ingredient_item_text_spacing" android:text="@string/unmatched" android:maxLines="1" style="@style/Subheader.BlackSecondaryText"/>
            <TextView android:ellipsize="end" android:id="@+id/original_text" android:text="@string/original_ingredient_text" android:maxLines="1" style="@style/Caption.BlackText"/>
        </LinearLayout>
        <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_right_black"/>
        <TextView android:id="@+id/calories" android:text="200" style="@style/Subheader.BlackText"/>
        <CheckBox android:id="@+id/check_box" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_below="@+id/container" style="@style/HorizontalDivider"/>
</RelativeLayout>
