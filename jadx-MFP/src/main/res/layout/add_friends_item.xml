<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
    <com.myfitnesspal.shared.ui.view.MfpImageView android:layout_gravity="center_vertical" android:id="@+id/image" android:layout_width="@dimen/add_friend_item_image_size" android:layout_height="@dimen/add_friend_item_image_size" android:layout_marginRight="8dp" app:circular="true"/>
    <RelativeLayout android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_weight="1">
        <TextView android:id="@+id/txt_primary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mike_d" style="@style/Link2.Blue"/>
        <TextView android:id="@+id/txt_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mike_dean" android:layout_below="@+id/txt_primary" style="@style/Body.BlackSecondaryText"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/spinnerButtonContainer" android:layout_width="@dimen/add_friend_item_button_width" android:layout_height="wrap_content" android:maxHeight="@dimen/add_friend_item_button_max_height" android:minHeight="@dimen/add_friend_item_button_min_height" style="@style/btn_white_blue_stroke">
        <TextView android:textColor="@color/btn_white_blue_stroke_text_selector" android:id="@+id/btn_action" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/action" style="@style/Subheader.Blue"/>
        <ProgressBar android:id="@+id/inviteProgress" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
