<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/mfp_background" android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.v7.widget.CardView android:id="@+id/diary_settings" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/CardBase.NewsFeedCard">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="@string/settings_diary_settings" style="@style/SettingsHeaderRow"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@drawable/divider_grey_small" android:showDividers="middle">
                    <include android:id="@+id/settings_macros" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_insights" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_water" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_meal_name" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_dashboard" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_diary_sharing" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_food_timestamps" layout="@layout/settings_item"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/search_settings" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/CardBase.NewsFeedCard">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="@string/settings_search_settings" style="@style/SettingsHeaderRow"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@drawable/divider_grey_small" android:showDividers="middle">
                    <include android:id="@+id/settings_search_tab" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_multiadd" layout="@layout/settings_item"/>
                    <include android:id="@+id/settings_all_foods" layout="@layout/settings_item"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/goal_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/material_margin_8" style="@style/CardBase.NewsFeedCard">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="@string/goals" style="@style/SettingsHeaderRow"/>
                <include android:id="@+id/settings_goals" layout="@layout/settings_item"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
