<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
    <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/donutProgressBarView" android:layout_width="@dimen/donut_progress_height_width" android:layout_height="@dimen/donut_progress_height_width">
        <ProgressBar android:layout_gravity="center" android:id="@+id/donutProgressBar" android:background="@drawable/donut_progress_macro_base" android:layout_width="match_parent" android:layout_height="match_parent" android:max="100" android:progress="99" android:indeterminate="false" android:progressDrawable="@drawable/donut_progress_drawable" style="?android:attr/progressBarStyleHorizontal"/>
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="center_horizontal" android:id="@+id/tvMacroValue" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Header2A.BlackText"/>
            <TextView android:layout_gravity="center_horizontal" android:id="@+id/tvMacroUnit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-3dp" style="@style/Caption.BlackSecondaryText"/>
        </LinearLayout>
    </FrameLayout>
    <TextView android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/tvMacroName" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/Caption.BlackSecondaryText"/>
</LinearLayout>
