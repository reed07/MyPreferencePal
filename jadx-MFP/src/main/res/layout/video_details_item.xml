<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/sponsor_attribution_container" android:paddingLeft="@dimen/material_padding_16" android:paddingRight="@dimen/material_padding_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/material_margin_8" android:layout_marginBottom="@dimen/material_margin_10">
        <ImageView android:id="@+id/sponsor_attribution_image" android:background="@color/transparent" android:layout_width="@dimen/video_sponsor_size" android:layout_height="@dimen/video_sponsor_size" android:layout_alignParentTop="true" android:layout_marginEnd="@dimen/material_margin_8" android:layout_alignParentStart="true"/>
        <TextView android:id="@+id/sponsored_by" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_sponsored_by" android:layout_alignTop="@+id/sponsor_attribution_image" android:layout_toEndOf="@+id/sponsor_attribution_image" style="@style/Caption.BlackSecondaryText"/>
        <TextView android:id="@+id/sponsor_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/sponsored_by" android:layout_alignStart="@+id/sponsored_by" style="@style/Subheader.BlackText"/>
    </RelativeLayout>
    <View android:id="@+id/divider1" android:background="@color/video_divider" android:visibility="gone" style="@style/HorizontalDivider"/>
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/material_padding_16" android:paddingRight="@dimen/material_padding_16" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/video_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/material_margin_12" android:layout_marginBottom="@dimen/material_margin_6" style="@style/Header2A.BlackText"/>
        <TextView android:id="@+id/blog_link" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/material_margin_12" style="@style/Caption.BlackSecondaryText"/>
    </LinearLayout>
    <View android:id="@+id/divider2" android:background="@color/video_divider" android:layout_width="wrap_content" android:layout_marginBottom="@dimen/material_margin_12" style="@style/HorizontalDivider"/>
    <TextView android:gravity="center_vertical" android:id="@+id/playlist_name" android:paddingLeft="@dimen/material_padding_16" android:paddingRight="@dimen/material_padding_16" android:layout_width="match_parent" android:layout_height="@dimen/video_playlist_title_height" style="@style/Subheader.BlackText"/>
</LinearLayout>
