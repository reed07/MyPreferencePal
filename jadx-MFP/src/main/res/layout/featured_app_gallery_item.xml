<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/containerLayout" android:background="@color/white" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="0dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/imageViewWithDropShadow" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.myfitnesspal.shared.ui.view.MfpImageView android:id="@+id/image" android:layout_width="88dp" android:layout_height="88dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/textLayout" android:paddingTop="8dp" android:layout_width="88dp" android:layout_height="match_parent">
            <TextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/title" android:maxLines="2" style="@style/Subheader.BlackText"/>
            <TextView android:ellipsize="end" android:id="@+id/text" android:layout_width="88dp" android:layout_height="wrap_content" android:text="@string/text" android:singleLine="true" style="@style/Body.BlackSecondaryText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
