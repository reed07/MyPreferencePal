<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/list_item_bg_selector" android:paddingRight="@dimen/item_horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/DoubleLineItemContainer">
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/title" android:drawablePadding="@dimen/premium_crown_drawable_padding" style="@style/Body.BlackText"/>
            <TextView android:id="@+id/side_title" android:layout_marginLeft="10dp" style="@style/Body.BlackSecondaryText"/>
        </LinearLayout>
        <TextView android:id="@+id/subtitle" style="@style/Body.BlackSecondaryText"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/text" android:drawablePadding="@dimen/premium_crown_drawable_padding" style="@style/Body.Blue"/>
        <CheckBox android:id="@+id/checkbox" android:focusable="false" android:focusableInTouchMode="true" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
