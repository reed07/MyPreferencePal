<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/header" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/bg_progress_congrats_dense" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_alignParentTop="true"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <TextView android:id="@+id/value_text" android:text="XX" style="@style/ProgressPhotosCongratsHeader"/>
                <TextView android:id="@+id/value_subtext" android:text="subtext" style="@style/ProgressPhotosCongratsSubHeader"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header">
            <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/body_header" android:paddingTop="24dp" android:paddingBottom="12dp" android:text="foo" style="@style/Header.BlackText"/>
            <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/body_text" android:paddingLeft="56dp" android:paddingTop="12dp" android:paddingRight="56dp" android:paddingBottom="12dp" android:text="foo" style="@style/Body.BlackSecondaryText"/>
            <TextView android:layout_gravity="center" android:id="@+id/share_photo_button" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="@string/progress_photos_congrats_share_button" style="@style/interstitial_positive_button"/>
            <TextView android:layout_gravity="center" android:id="@+id/not_now_button" android:text="@string/not_now" style="@style/interstitial_negative_button"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
