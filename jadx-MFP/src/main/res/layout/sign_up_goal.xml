                <RadioButton android:id="@+id/maintain" android:layout_width="match_parent" android:text="@string/maintain_weight" style="@style/MaterialSignUpRadio"/>
                <RadioButton android:id="@+id/gain" android:layout_width="match_parent" android:text="@string/gain_weight" style="@style/MaterialSignUpRadio"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
