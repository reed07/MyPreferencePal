<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt">
    <TextView android:id="@+id/macro_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/material_margin_4" android:text="Calories" style="@style/Caption.BlackSecondaryText"/>
    <ProgressBar android:id="@+id/macro_progress" android:layout_width="match_parent" android:layout_height="@dimen/material_margin_8" android:layout_marginBottom="@dimen/material_margin_2" android:maxHeight="@dimen/material_margin_8" android:indeterminate="false" android:minHeight="@dimen/material_margin_8" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_goal_percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" style="@style/Caption.BlackSecondaryText"/>
        <ImageView android:id="@+id/iv_premium_lock" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_premium_lock_grey" android:layout_weight="1"/>
        <TextView android:gravity="right" android:id="@+id/tv_goal_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" style="@style/Caption.BlackSecondaryText"/>
    </LinearLayout>
</merge>
