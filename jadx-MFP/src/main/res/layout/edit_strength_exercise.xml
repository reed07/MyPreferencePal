<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@drawable/divider_grey_small" android:showDividers="middle" android:paddingStart="@dimen/material_margin_5" android:paddingEnd="@dimen/material_margin_5">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingTop="@dimen/edit_exercise_entry_padding_top_and_bottom" android:paddingBottom="@dimen/edit_exercise_entry_padding_top_and_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="start" android:id="@+id/sets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/numberofSetsTxt" android:layout_weight="1" android:layout_marginStart="@dimen/material_margin_10" style="@style/FoodInfoLabelText"/>
        <EditText android:layout_gravity="center_vertical" android:id="@+id/editTxtSetCount" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/requiredLabel" android:layout_weight="1" android:inputType="numberDecimal" android:layout_marginEnd="@dimen/material_margin_5" style="@style/ExerciseInfoValueEditText">
            <requestFocus/>
        </EditText>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:paddingTop="@dimen/edit_exercise_entry_padding_top_and_bottom" android:paddingBottom="@dimen/edit_exercise_entry_padding_top_and_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/repetitionsPerSet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/repetitionSetTxt" android:layout_marginStart="@dimen/material_margin_10" style="@style/FoodInfoLabelText"/>
        <EditText android:id="@+id/editTxtRepetitionsPerSet" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/requiredLabel" android:layout_weight="1" android:inputType="numberDecimal" android:layout_marginEnd="@dimen/material_margin_5" style="@style/ExerciseInfoValueEditText"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:paddingTop="@dimen/edit_exercise_entry_padding_top_and_bottom" android:paddingBottom="@dimen/edit_exercise_entry_padding_top_and_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/weightPerRepetition" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/weightRepetitionTxt" android:layout_marginStart="@dimen/material_margin_10" style="@style/FoodInfoLabelText"/>
        <EditText android:layout_gravity="center_vertical" android:id="@+id/editTxtWeightPerRepetition" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/optionalField" android:layout_weight="1" android:inputType="numberDecimal" android:layout_marginEnd="@dimen/material_margin_5" style="@style/ExerciseInfoValueEditText"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/calories_burned_ll" android:paddingTop="@dimen/edit_exercise_entry_padding_top_and_bottom" android:paddingBottom="@dimen/edit_exercise_entry_padding_top_and_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/calories_burned" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/burned_calories" android:layout_marginStart="@dimen/material_margin_10" style="@style/FoodInfoLabelText"/>
        <TextView android:textSize="16sp" android:gravity="end" android:layout_gravity="center_vertical" android:id="@+id/calories_burned_faq" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/not_available" android:layout_weight="1" android:layout_marginEnd="@dimen/material_margin_5" style="@style/Body.Blue"/>
    </LinearLayout>
</LinearLayout>
