<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/newsfeed_padding_8dp">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:padding="@dimen/challenge_list_item_padding" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/friends_in_challenge" android:layout_weight="1" style="@style/Header.BlackText"/>
            <TextView android:id="@+id/tv_metric_logged" android:paddingRight="@dimen/challenge_list_item_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/food_logged" style="@style/Body.BlackSecondaryText"/>
        </LinearLayout>
        <View android:id="@+id/separator" android:background="@color/separator_light_grey" android:layout_width="match_parent" android:layout_height="1dp"/>
        <com.myfitnesspal.shared.ui.view.LinearLayoutListAdapterView android:orientation="vertical" android:id="@+id/llFriends" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <include android:id="@+id/more_container" android:visibility="gone" layout="@layout/challenge_show_more_friends"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
