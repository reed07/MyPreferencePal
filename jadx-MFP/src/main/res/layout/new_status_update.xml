<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/mainBody" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/bottomcontrols" android:layout_below="@+id/title">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:id="@+id/iv_status_image" android:visibility="gone" android:layout_width="@dimen/progress_pics_height_80dp" android:layout_height="@dimen/progress_pics_height_80dp" android:layout_marginLeft="@dimen/progress_pics_padding_16dp" android:layout_marginTop="@dimen/progress_pics_padding_16dp"/>
            <EditText android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/editTextStatus" android:background="@android:color/transparent" android:paddingLeft="@dimen/material_padding_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/material_padding_20" android:hint="@string/status_field_hint" android:maxLines="3" android:layout_toRightOf="@+id/iv_status_image" android:inputType="none|text|textCapSentences|textAutoCorrect|textMultiLine" android:imeOptions="actionGo" android:imeActionLabel="@string/done" style="@style/Header2B.BlackSecondary">
                <requestFocus/>
            </EditText>
        </RelativeLayout>
        <View android:id="@+id/vSep" android:background="@color/separator_light_grey" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TextView android:gravity="center" android:id="@+id/tv_add_pic" android:layout_width="match_parent" android:layout_height="@dimen/material_padding_48" android:text="@string/add_progress_photo" style="@style/Body.Blue"/>
    </LinearLayout>
</ScrollView>
