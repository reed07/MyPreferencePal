<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_horizontal" android:orientation="vertical" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:rowCount="3" android:columnCount="2">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/ua_black" android:id="@+id/configuration_key_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_column="0" android:text="@string/configuration_key_label" android:layout_row="0"/>
    <EditText android:textSize="14sp" android:id="@+id/configuration_key" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginBottom="24dp" android:minWidth="150dp" android:layout_column="1" android:layout_row="0" android:layout_marginStart="16dp"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/ua_black" android:id="@+id/configuration_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_column="0" android:text="@string/configuration_type_label" android:layout_row="1"/>
    <Spinner android:textSize="14sp" android:entries="@array/configuration_types_array" android:id="@+id/configuration_type_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginBottom="20dp" android:layout_column="1" android:layout_row="1" android:layout_marginStart="16dp"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/ua_black" android:id="@+id/configuration_value_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:layout_column="0" android:text="@string/configuration_value_label" android:layout_row="2"/>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_column="1" android:layout_row="2" android:layout_marginStart="16dp">
        <EditText android:textSize="14sp" android:id="@+id/configuration_value_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="150dp" android:inputType="textMultiLine"/>
        <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/configuration_value_layout" android:background="@color/ua_light_gray" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        </ScrollView>
    </FrameLayout>
</GridLayout>
