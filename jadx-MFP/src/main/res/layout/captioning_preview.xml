<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/preview_viewport" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="@dimen/captioning_preview_height" android:paddingStart="32dp" android:paddingEnd="32dp">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/caption_background" android:scaleType="centerCrop" android:contentDescription="@null"/>
