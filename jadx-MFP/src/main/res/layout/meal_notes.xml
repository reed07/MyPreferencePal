<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@drawable/divider_horizontal_black" android:showDividers="middle">
    <RelativeLayout style="@style/FoodInfoContainer.Header">
        <TextView android:id="@+id/meal_notes_header_text" android:text="@string/meal_sharing_notes_header" android:layout_alignParentStart="true" style="@style/FoodInfoHeaderText"/>
        <TextView android:id="@+id/meal_notes_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add" android:layout_alignBaseline="@+id/meal_notes_header_text" android:layout_alignParentEnd="true" style="@style/Subheader.Blue"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/material_padding_16">
        <TextView android:id="@+id/meal_notes_empty" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/meal_sharing_notes_hint" style="@style/Subheader.BlackSecondaryText"/>
        <TextView android:autoLink="web" android:id="@+id/meal_notes" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Body.BlackText"/>
    </FrameLayout>
</LinearLayout>
