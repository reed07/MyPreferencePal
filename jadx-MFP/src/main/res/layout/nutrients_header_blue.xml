<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/nutrient_header_light_blue" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/txtLabel" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="145dp" android:layout_height="match_parent" style="@style/nutrient_item_header"/>
    <com.myfitnesspal.shared.ui.view.StyledTextView android:id="@+id/txtTotal" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="2dp" android:text="@string/totalTxt" style="@style/nutrient_item_header"/>
    <com.myfitnesspal.shared.ui.view.StyledTextView android:id="@+id/txtGoal" android:layout_width="65dp" android:layout_height="match_parent" android:layout_marginRight="2dp" android:text="@string/goalTxt" style="@style/nutrient_item_header"/>
    <com.myfitnesspal.shared.ui.view.StyledTextView android:id="@+id/txtLeft" android:layout_width="70dp" android:layout_height="match_parent" android:text="@string/leftTxt" style="@style/nutrient_item_header"/>
</LinearLayout>
