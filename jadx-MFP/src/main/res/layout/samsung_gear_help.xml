<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/material_margin_16" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:id="@+id/statusContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/samsung_gear_connection_status" style="@style/Body.BlackText"/>
            <TextView android:id="@+id/statusText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/material_margin_4" android:text="@string/samsung_gear_not_connected" style="@style/Body.BlackText"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/statusContainer">
            <TextView android:id="@+id/statusOk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/material_margin_16" android:text="@string/samusng_gear_everything_ok" style="@style/Body.BlackText"/>
            <TextView android:id="@+id/statusHelp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/material_margin_16" android:text="@string/samsung_gear_help_text" style="@style/Body.BlackText"/>
            <TextView android:id="@+id/enableBluetooth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/material_margin_16" android:layout_marginTop="@dimen/material_margin_16" android:text="@string/samsung_gear_enable_bluetooth" style="@style/Body.Blue"/>
            <TextView android:id="@+id/installGearApp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/material_margin_16" android:layout_marginTop="@dimen/material_margin_16" android:text="@string/samsung_gear_install_gear_app" style="@style/Body.Blue"/>
            <TextView android:id="@+id/installSAP" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/material_margin_16" android:layout_marginTop="@dimen/material_margin_16" android:text="@string/samsung_gear_install_accessory_service" style="@style/Body.Blue"/>
        </LinearLayout>
        <TextView android:id="@+id/tryAgainButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/samsung_gear_test_again_button" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="@style/interstitial_positive_button"/>
    </RelativeLayout>
</ScrollView>
